<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.MainActivity"
    android:orientation="horizontal"
    android:background="@drawable/triplistview_selector"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="12dp"
        android:id="@+id/createTrip_tripicon_cardView"
        app:cardCornerRadius="25dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/createTrip_tripicon_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
        />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="left"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/triptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="Reise Reise Seemanreise"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/triplistview_text_selector"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tripsubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Jeder tuts auf seine Weise"
            android:textColor="@drawable/triplistview_text_selector"/>
    </LinearLayout>

</LinearLayout>
