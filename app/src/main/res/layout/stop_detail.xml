<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.stops.detail.StopDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/stopdetail_toolbar"
        app:theme="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <Button
            android:id="@+id/stopdetail_editSave_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_edit_white"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:onClick="onEditClicked"/>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <EditText
            android:id="@+id/stopdetail_stop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="@string/createStop_name_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:visibility="gone"/>

        <include
            android:id="@+id/accommodation_include"
            layout="@layout/stop_detail_accommodation"
            android:layout_below="@id/stopdetail_stop_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="30dp"/>

        <include
            android:id="@+id/todo_include"
            layout="@layout/stop_detail_todo"
            android:layout_below="@id/accommodation_include"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="30dp"/>

        <include
            android:id="@+id/notes_include"
            layout="@layout/stop_detail_notes"
            android:layout_below="@id/todo_include"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

    </RelativeLayout>

</RelativeLayout>
