<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:context=".ui.stops.StopDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/stopdetail_toolbar"
        app:theme="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <Button
            android:id="@+id/stopdetail_editSave_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_edit_white"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:onClick="onEditClicked"/>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <EditText
            android:id="@+id/stopdetail_stop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="@string/createStop_name_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/stopdetail_accommodation_label"
            android:paddingLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unterkunft:"
            android:textSize="18dp"
            android:textColor="@color/colorGreyText"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/stopdetail_stop_name"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/stopdetail_accommodation_layout"
            android:layout_below="@id/stopdetail_accommodation_label">

            <EditText
                android:id="@+id/stopdetail_accommodation_edittext"
                android:background="@layout/rounded_border_edittext"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="16dp"
                android:hint="Name der Unterkunft"
                />

            <ImageButton
                android:id="@+id/stopdetail_accommodation_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_check_circle_primary"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/stopdetail_notes_label"
            android:layout_marginTop="20dp"
            android:paddingLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notizen:"
            android:textSize="18dp"
            android:textColor="@color/colorGreyText"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/stopdetail_accommodation_layout"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/stopdetail_notes_layout"
            android:layout_below="@id/stopdetail_notes_label">

            <EditText
                android:id="@+id/stopdetail_notes_edittext"
                android:background="@layout/rounded_border_edittext"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="20dp"
                android:imeOptions="actionDone"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:textSize="16dp"
                />

            <ImageButton
                android:id="@+id/stopdetail_notes_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_check_circle_primary"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>
