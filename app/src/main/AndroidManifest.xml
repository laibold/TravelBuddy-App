<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.travelbuddyapp.travelBuddy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.createTrip.CreateTripActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.stops.StopsActivity"
            android:label="@string/menu_stops"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.stops.CreateStopActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ui.stops.StopsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.stops.StopDetailActivity"
            android:parentActivityName=".ui.stops.StopsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/stopDetail_stopName"/>
        <activity android:name=".ui.packingList.PackingListActivity"
            android:label="@string/menu_packinglist"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.debug.DebugActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ui.debug.DebugActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>