<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.travelbuddyapp.travelBuddy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".packingList.PackinglistActivity"></activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".createTrip.CreateTripActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".stop.AllStopsActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".stop.CreateStopActivity"
            android:label="@string/app_name"
            android:parentActivityName=".stop.AllStopsActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".debug.DebugActivity"
            android:label="@string/app_name"
            android:parentActivityName=".debug.DebugActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>